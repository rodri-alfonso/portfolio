---
import Link from './Link.astro'
import IconOrchester from 'components/IconOrchester.astro'
import NavMobile from './NavMobile.astro'
import NavDesktop from './NavDesktop.astro'
import Alert from 'components/Alert/index.astro'
---

<header id='header-id'>
	<Link href='/' class='link-icon brand'>
		<IconOrchester icon='brand' />
	</Link>
	<NavDesktop />
	<NavMobile />
	<Alert id='alert' />
</header>

<style>
	header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		height: 6rem;

		position: sticky;
		top: 0;

		background: rgba(17, 17, 17, 0.47);
		box-shadow: 0 0.4rem 3rem rgba(0, 0, 0, 0.1);
		backdrop-filter: blur(8.3px);
		-webkit-backdrop-filter: blur(8.3px);
	}
	.link-icon {
		background-color: var(--color-primary-opacity-10);
		border-radius: 0.8rem;
		padding: 0.7rem 1.2rem;
		display: grid;
		place-items: center;
		cursor: pointer;
	}

	.brand {
		background-color: unset;
	}
</style>
