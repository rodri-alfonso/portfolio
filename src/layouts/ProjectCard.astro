---
import Header from '@components/Header/index.astro'
import Footer from '@components/Footer.astro'

export interface Props {
	content: {
		title: string
		codeLink: string
		siteLink: string
		description: string
		color: string
	}
}

const {
	content: { title, codeLink, siteLink, description, color },
} = Astro.props
---

<html lang='en'>
	<head>
		<style>
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}
			hr {
				border-top: 1px solid #ddd;
				margin: 1rem 0;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<h1 class='title'>{title}</h1>
				<hr />
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>
