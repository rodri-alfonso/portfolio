---
import Subheading from 'theme/typography/Subheading.astro'

export interface Props extends astroHTML.JSX.HTMLAttributes {
	title: string
	sectionId?: string
}

const { title, sectionId, ...props } = Astro.props
---

<section id={sectionId} class={props.class} section-query={sectionId}>
	{title && <Subheading>{title}</Subheading>}
	<slot />
</section>

<style>
	section {
		width: 100%;
		max-width: 110rem;
		margin: 0 auto;

		display: grid;
		gap: 5.4rem;
	}

	section:before {
		content: '';
		display: block;
		height: 60px;
		margin-top: -60px;
	}
</style>
